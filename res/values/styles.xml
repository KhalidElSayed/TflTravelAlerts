<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- App theme -->
    <style name="TflTheme" parent="@style/Holo.Theme.Light.DarkActionBar"></style>

    <!-- Day selector -->
    <style name="DaySelector">
        <item name="android:background">@drawable/day_selector_background</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">@dimen/triple_spacing_unit</item>
