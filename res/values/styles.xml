<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- App theme -->
    <style name="TflTheme" parent="@style/Holo.Theme"></style>

    <!-- Multi selector (base) -->
    <style name="MultiSelector">
        <item name="android:background">@drawable/multi_selector_background</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/triple_spacing_unit</item>
        <item name="android:layout_margin">@dimen/quarter_spacing_unit</item>
        <item name="android:padding">@dimen/quarter_spacing_unit</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/multi_selector_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Day selector -->
    <style name="DaySelector" parent="@style/MultiSelector">
    </style>

    <!-- Line selector -->
    <style name="LineSelector" parent="@style/MultiSelector">
        <item name="android:textColor">@drawable/line_status_selector_text_color</item>
    </style>
    
</resources>